<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--    Focused State -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="?attr/colorPrimaryContainer"/>
            <stroke
                android:width="4dp"
                android:color="@color/primary_blue" />
            <corners android:radius="12dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
<!--    Default State-->
    <item>
        <shape>
            <solid android:color="?attr/colorPrimaryContainer"/>
            <stroke
                android:width="2dp"
                android:color="@color/darker_gray" />
            <corners android:radius="12dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>